{
  "name": "haptic-movie-file-reader",
  "version": "0.0.1",
  "description": "Process different haptic movie file formats, and retreive information from them.",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "build": "trash dist dist-bundle && yarn build:main",
    "build:main": "tsc -p tsconfig.json",
    "tslint": "tslint -c tslint.json src/* src/**/* tests/* tests/**/*",
    "tslint:fix": "tslint -c tslint.json --fix semicolon,comma,no-var-keyword,ordered-imports src/* src/**/* tests/* tests/**/*",
    "pretest": "yarn build:main",
    "test": "nyc mocha tests/*.ts",
    "posttest": "nyc report && codecov -f coverage/*.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metafetish/haptic-movie-file-reader.git"
  },
  "author": "Kyle Machulis <kyle@machul.is>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/metafetish/haptic-movie-file-reader/issues"
  },
  "homepage": "https://github.com/metafetish/haptic-movie-file-reader#readme",
  "dependencies": {
    "ini": "^1.3.4"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/csv-parse": "^1.1.8",
    "@types/ini": "^1.3.29",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.22",
    "chai": "^3.5.0",
    "codecov": "^2.2.0",
    "mocha": "^3.4.1",
    "nyc": "^10.3.2",
    "trash-cli": "^1.4.0",
    "ts-loader": "^2.1.0",
    "ts-node": "^3.0.4",
    "tslint": "^5.4.3",
    "typescript": "^2.3.3",
    "yarn": "^0.24.6"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "json",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
